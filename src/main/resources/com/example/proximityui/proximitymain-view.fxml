<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.SearchableComboBox?>
<VBox xmlns:fx="http://javafx.com/fxml" spacing="5.0"
      fx:controller="com.example.proximityui.ProximityMainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <!--        <Label fx:id="welcomeText"-->
    <!--               GridPane.columnIndex="0" GridPane.rowIndex="0"/>-->

    <!--        <Button text="Hello!" onAction="#onHelloButtonClick"-->
    <!--                GridPane.columnIndex="0" GridPane.rowIndex="1"/>-->

    <GridPane>

        <Label text="Card List"
               GridPane.columnIndex="0" GridPane.rowIndex="0">
            <GridPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </GridPane.margin>
        </Label>

        <SearchableComboBox
                fx:id="availableCardsList"
                GridPane.columnIndex="0" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </GridPane.margin>
        </SearchableComboBox>
        <Button
                text="Add"
                GridPane.columnIndex="0" GridPane.rowIndex="2"
                onAction="#onAddCardButtonClick"
                GridPane.valignment="TOP">
            <GridPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </GridPane.margin>

        </Button>

        <Label
                text="Selected Cards"
                GridPane.columnIndex="1" GridPane.rowIndex="0">
            <GridPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </GridPane.margin>
        </Label>
        <Button text="-"
                GridPane.columnIndex="1" GridPane.rowIndex="0"
                GridPane.halignment="RIGHT"
        onAction="#removeSelectedCard">
            <GridPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </GridPane.margin>
        </Button>
        <ListView
                fx:id="selectedCardsList"
                GridPane.columnIndex="1" GridPane.rowIndex="1"
                GridPane.rowSpan="2"
        onMousePressed="#onSelectedCardDoubleClick">
            <GridPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </GridPane.margin>
        </ListView>

    </GridPane>

</VBox>
